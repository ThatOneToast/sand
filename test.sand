fn midnight {
    time set midnight;
    say set it to midnight;
}

fn make_mobs_float {
    effect @e[type=minecraft:zombie] minecraft:levitation 25 13;
    effect @e[type=minecraft:creeper] minecraft:levitation 25 13;
    effect @e[type=minecraft:skeleton] minecraft:levitation 25 13;
}


fn clear_everyone {

    tellraw @s Clearing inventories;
    clear @a;
    tellraw @s Cleared inventories;
    tellraw @s Clearing effects;
    eclear @a;
    tellraw @s Cleared effects;
}


fn hundred_levels {
    xpadd 100 @a levels;
    tellraw @s Added 100 levels;
    xpset 101 @a levels;
    tellraw @s Set 101 levels;
    xpadd 80 @a points;
    tellraw @s Added 80 points;
}